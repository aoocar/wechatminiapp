.top-msg {
    line-height: 76rpx;
    background: #eee;
    text-align: right;
    font-size: 24rpx;
    box-sizing: border-box;
    padding-right: 150rpx;
    color: #777;
}

.top-msg image {
    position: absolute;
    top: 18rpx;
    right: 100rpx;
    height: 40rpx;
    width: 40rpx;
    animation: myfirst .3s infinite alternate;
}

@-webkit-keyframes myfirst {
    from {
        top: 10rpx;
    }

    to {
        top: 26rpx;
    }
}

@keyframes myfirst {
    from {
        top: 10rpx;
    }

    to {
        top: 26rpx;
    }
}

.case-hot {
    width: 720rpx;
    margin: 10rpx auto;
}

.case-hot-ul {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    -webkit-box-pack: justify;
    justify-content: space-between;
}

.case-hot-ul .case-li {
    height: 160rpx;
    width: 226rpx;
    margin: 10rpx 0;
    padding: 0;
    position: relative;
    border-radius: 10rpx;
    overflow: hidden;
}

.case-a {
    background: rgba(0,0,0,.4);
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.case-img-box2 {
    padding: 6rpx;
    margin: 10rpx;
    background: #fff;
    line-height: 0;
}

.case-img2,.case-img-box2 {
    border-radius: 10rpx;
    width: 110rpx;
}

.case-img2 {
    height: 60rpx;
}

.case-title2 {
    position: absolute;
    bottom: 0;
    left: 0;
    background: rgba(0,0,0,.6);
    color: #fff;
    font-size: 24rpx;
    text-align: center;
    line-height: 46rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    border-radius: 0 0 5px 5px;
    width: 100%;
}

.case-list {
    margin: 20rpx auto;
}

.case-list .title {
    position: relative;
    display: table;
    overflow: hidden;
    font-size: 28rpx;
    font-weight: 400;
    table-layout: fixed;
    border-radius: 3px;
    margin: 0 auto;
    border: none;
    padding: 0 20rpx;
}

.case-list .title .title-item {
    display: table-cell;
    width: 1%;
    overflow: hidden;
    line-height: 30px;
    color: #007aff;
    text-align: center;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #666;
    border: 1px solid #ff9600;
}