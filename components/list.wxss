.case-ul {
    width: 700rpx;
    margin: 0 auto;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    flex-wrap: wrap;
    padding-bottom: 40rpx;
}

.case-li {
    height: 276rpx;
    margin-top: 20rpx;
    width: 220rpx;
    padding: 0;
    position: relative;
    border-radius: 10rpx;
    overflow: hidden;
}

.ad-view {
    width: 100%;
    margin-top: 20rpx;
}

.case-a {
    background: rgba(0,0,0,.6);
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.case-img-box {
    border-radius: 10rpx;
    width: 100%;
    background: #fff;
}

.case-img {
    width: 220rpx;
    height: 220rpx;
    display: block;
}

.case-title {
    position: absolute;
    bottom: 0;
    left: 0;
    background: rgba(0,0,0,.6);
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    line-height: 56rpx;
    border-radius: 0 0 5px 5px;
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}